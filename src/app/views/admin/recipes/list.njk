{% extends "admin/layout.njk" %}


{% block head %}
    <title>Foodfy - Admin</title>
    <link rel="stylesheet" href="/admin/recipes/list.css">
    <link rel="stylesheet" href="/user/paginate.css">
{% endblock %} 


{% block content %}   

    <div class="content-box">
        <div class="header-box">
            <h2>Gerenciar Receitas</h2>
            <div>
                <a href="/admin/recipes/create" class="adminBtn" type="submit">Criar Receita</a>
            </div>
        </div>
        

        <div class="cards">
            {% for recipe in recipes %}
            <div class="card">
                <img src="{{files[loop.index0].src}}" alt="">
                <div>
                    <h4>{{recipe.title}}</h4>
                    <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
            {% endfor %}
        </div>
        
        <div class="pagination" data-page={{pagination.page}} data-total={{pagination.total}} data-filter={{filter}}></div>

    </div>

<script src="/user/paginate.js"></script>

{% endblock %} 
