{% extends "session/layout.njk" %}

{% block head %}
    <title>Foodfy</title>
{% endblock %} 


{% block content %}
<form action="/admin/users/forgot-password" method="post">
    <h2>Esqueceu a Senha?</h2>
    
    <div class="fields">
        <div class="input-box"> {# TITLE #}
            <div class="input-title">E-mail</div>
            <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu e-mail">
        </div>
    </div>

    <div class="form-footer btn-right">
        <button class="button" type="submit">Recuperar</button>
    </div>

</form>
{% endblock %} 
