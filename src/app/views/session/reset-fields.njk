<div class="input-box"> {# TITLE #}
    <div class="input-title">E-mail</div>
    <input type="email" name="email" value="{{user.email}}" placeholder="Digite seu e-mail" onblur="Validate.apply(this,'isEmail')">
</div>
<div class="input-box"> {# PASSWORD #}
    <div class="input-title">Nova Senha</div>
    <input type="password" name="password" placeholder="Digite sua nova senha">
</div>

<div class="input-box"> {# REPEAT PASSWORD #}
    <div class="input-title">Repetir senha</div>
    <input type="password" name="passwordRepeat" placeholder="Repita a nova senha">
</div>